@model StudentCourse
@{
    ViewData["Title"] = "Enroll";
}

<h2>Enroll Student</h2>

<form asp-action="Enroll" method="post">
    <div class="form-group">
        <label>Student</label>
        <select asp-for="StudentId" class="form-control" asp-items="ViewBag.Students"></select>
    </div>

    <div class="form-group">
        <label>Course</label>
        <select asp-for="CourseId" class="form-control" asp-items="ViewBag.Courses"></select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Enroll</button>
</form>


