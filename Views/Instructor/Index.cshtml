@model IEnumerable<Instructor>

@{
    ViewData["Title"] = "Instructors List";
}

<h1>Instructors</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Instructor</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().Major)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            <tr>
                <td>@instructor.FullName</td>
                <td>@instructor.Email</td>
                <td>@instructor.Major</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@instructor.InstructorId" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@instructor.InstructorId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


