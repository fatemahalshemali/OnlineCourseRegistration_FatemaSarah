@model Instructor
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h1>Are you sure to Delete <span class="text-danger">@Model.FullName</span></h1>
<form method="post" asp-action="ConfirmDelete" asp-controller="Instructor">

    @Html.HiddenFor(m => m.InstructorId)

    <input type="submit" value="Delete" class="btn btn-danger" />

    <a asp-action="Index" asp-controller="Instructor"
       class="btn btn-warning">
        Cancel
    </a>


</form>
